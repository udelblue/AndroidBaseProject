<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
  
    <!-- When menu get pressed -->
  <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#1e2129"/>
            <stroke
                android:width="1dp"
                android:color="#2e333c" />
            <corners
				android:radius="5dp"/>
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
  
  <!-- When menu get focused -->
  <item android:state_focused="true" >
       <shape>
            <solid
                android:color="#1e2129"/>
            <stroke
                android:width="1dp"
                android:color="#2e333c" />
            <corners
				android:radius="5dp"/>
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
 

</selector>
