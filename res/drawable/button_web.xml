<?xml version="1.0" encoding="utf-8"?>

<!-- This code is used to customize button in SocialMedia page -->
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">
	
    <!-- When button get pressed -->
	<item android:state_pressed="true">
		<shape>
			<gradient
                android:startColor="#019bb4"
                android:endColor="#016171"
                android:angle="-90"
            />
			<stroke
				android:width="1dip"
				android:color="#15161a"
			/>
			<corners
				android:radius="5dip"
			/>
			<padding
			    android:left="10dp"
			    android:top="5dp"
			    android:right="10dp"
			    android:bottom="5dp"/>
		</shape>
	</item>	
	
	<!-- When button get focused -->
	<item android:state_focused="true">
		<shape>
			<gradient
                android:startColor="#019bb4"
                android:endColor="#016171"
                android:angle="-90"
            />
			<stroke
				android:width="1dip"
				android:color="#15161a"
			/>
			<corners
				android:radius="5dip"
			/>
			<padding
			    android:left="10dp"
			    android:top="5dp"
			    android:right="10dp"
			    android:bottom="5dp"/>
		</shape>
	</item>	
	
	<!-- Button in normal -->
	<item>
		<shape>
			<gradient
                android:startColor="#02a8c3"
                android:endColor="#027a8e"
                android:angle="-90"
            />
			<stroke
				android:width="1dip"
				android:color="#15161a"
			/>
			<corners
				android:radius="5dip"
			/>
			<padding
			    android:left="10dp"
			    android:top="5dp"
			    android:right="10dp"
			    android:bottom="5dp"/>
		</shape>
	</item>	
</selector>
