<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<!-- When EditText get pressed -->
	<item android:state_pressed="true">
		<shape>
			<gradient
                android:startColor="#e3e3e3"
                android:endColor="#ffffff"
                android:angle="-90"
            />
			<stroke
				android:width="1dip"
				android:color="#16191f"
			/>
			<corners
				android:radius="5dip"
			/>
			<padding
			    android:left="10dp"
			    android:top="10dp"
			    android:right="10dp"
			    android:bottom="10dp"/>
		</shape>
	</item>	
	
	<!-- When EditText get focused -->
	<item android:state_focused="true">
		<shape>
			<gradient
                android:startColor="#e3e3e3"
                android:endColor="#ffffff"
                android:angle="-90"
            />
			<stroke
				android:width="1dip"
				android:color="#16191f"
			/>
			<corners
				android:radius="5dip"
			/>
			<padding
			    android:left="10dp"
			    android:top="10dp"
			    android:right="10dp"
			    android:bottom="10dp"/>
		</shape>
	</item>	
	
	<!-- EditText in normal -->
	<item>
		<shape>
			<gradient
                android:startColor="#e3e3e3"
                android:endColor="#ffffff"
                android:angle="-90"
            />
			<stroke
				android:width="1dip"
				android:color="#16191f"
			/>
			<corners
				android:radius="5dip"
			/>
			<padding
			    android:left="10dp"
			    android:top="10dp"
			    android:right="10dp"
			    android:bottom="10dp"/>
		</shape>
	</item>	
</selector>
