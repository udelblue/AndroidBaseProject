<?xml version="1.0" encoding="utf-8"?>

<!-- This code is used to customize titlebar -->

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- titlebar in normal -->
    <item>
        <shape>
            <gradient 
                android:startColor="#373b44"
                android:endColor="#181b21"
                android:angle="-90"/>
            <padding
                android:left="10dip"
                android:top="5dip"
                android:right="10dip"
                android:bottom="5dip"/>
        </shape>
    </item>

</selector>